generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  pass    String
}

model Cart {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  product_name   String   
  price    String
  quantity    String
  email    String
}
